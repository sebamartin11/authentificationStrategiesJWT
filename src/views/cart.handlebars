<div class="d-flex row justify-content-center">
  <div class="mt-3">
    <h1>Cart</h1>
    <div
      class="d-flex flex-wrap justify-content-around mt-4"
    >
      {{#if status}}
        {{#each list}}
          <div class="card card-product" value="{{this._id}}" style="width: 18rem;">
            <img
              class="card-img-top"
              src="/static/img/{{this.thumbnail}}"
              alt="{{this.title}}"
            />
            <div class="card-body">
              <h3 class="card-title">{{this.title}}</h3>
              <h5 class="card-title">${{this.price}} per product</h5>
              <p class="card-text">{{this.quantity}}</p>
              <button class="btn btn-danger" onclick=removeFromTCart("{{this._id}}")>X</button>
            </div>
          </div>
        {{/each}}
      {{else}}
      <div class="d-flex row align-items-center">
        <h2>{{data}}</h2>
        <div>
        <a class="btn btn-success" role="button" href="/products">Go shopping</a>
        </div>
      </div>
      {{/if}}
    </div>


<script src="/static/js/cart.js"></script>



